@model Mission6_Jones.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add a Movie to the Database</h1>

<form method="post">
    <div>
        <label asp-for="Category">Category</label>
        <input type="text" asp-for="Category" class="form-control" required />
    </div>

    <div>
        <label asp-for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" required />
    </div>

    <div>
        <label asp-for="Year">Year</label>
        <input type="number" asp-for="Year" class="form-control" required />
    </div>

    <div>
        <label asp-for="Director">Director</label>
        <input type="text" asp-for="Director" class="form-control" required />
    </div>

    <div>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">-- Select Rating --</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <input type="checkbox" asp-for="Edited" class="form-check-input" />
    </div>

    <div>
        <label asp-for="LentTo">Lent To</label>
        <input type="text" asp-for="LentTo" class="form-control" />
    </div>

    <div>
        <label asp-for="AdditionalNotes">Additional Notes</label>
        <input type="text" asp-for="AdditionalNotes" class="form-control" maxlength="25" />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
